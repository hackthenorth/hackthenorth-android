<?xml version="1.0" encoding="utf-8"?>

<com.hackthenorth.android.ui.component.HexagonRippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/mentor_image"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:scaleType="centerCrop" />

            <com.hackthenorth.android.ui.component.TextView
                android:id="@+id/mentor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/text_color_primary_inverse"
                android:textSize="24sp"
                android:background="#4000"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                app:typeface="roboto_regular"
                tools:text="Barack Obama" />
            </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.hackthenorth.android.ui.component.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/organization"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                app:typeface="roboto_regular" />

            <com.hackthenorth.android.ui.component.TextView
                android:id="@+id/mentor_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_color_secondary"
                android:textSize="14sp"
                app:typeface="roboto_regular"
                tools:text="USA" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.hackthenorth.android.ui.component.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/availability"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                app:typeface="roboto_regular" />

            <com.hackthenorth.android.ui.component.TextView
                android:id="@+id/mentor_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_secondary"
                android:textSize="14sp"
                app:typeface="roboto_regular"
                tools:text="Never" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <com.hackthenorth.android.ui.component.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/skills"
                android:textColor="@color/text_color_primary"
                android:textSize="16sp"
                app:typeface="roboto_regular" />

            <com.hackthenorth.android.ui.component.TextView
                android:id="@+id/mentor_skills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_secondary"
                android:textSize="14sp"
                app:typeface="roboto_regular"
                tools:text="Baking" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mentor_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:alpha="0.54"
                android:src="@drawable/email"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mentor_twitter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:alpha="0.54"
                android:src="@drawable/twitter"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mentor_github"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:alpha="0.54"
                android:src="@drawable/github"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/mentor_phone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:alpha="0.54"
                android:src="@drawable/phone"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</com.hackthenorth.android.ui.component.HexagonRippleView>

